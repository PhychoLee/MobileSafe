<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:check="http://schemas.android.com/apk/res/com.llf.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleBar"
        android:text="设置中心" />

    <com.llf.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        check:desc_off="自动更新已经关闭"
        check:desc_on="自动更新已经开启"
        check:sivtitle="自动更新设置" />
    
    <com.llf.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        check:desc_off="归属地显示已经关闭"
        check:desc_on="归属地显示已经开启"
        check:sivtitle="电话归属地显示设置" />
    
    <com.llf.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.llf.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>